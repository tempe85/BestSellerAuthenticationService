{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "BestSellerSettings": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "BestSellerDb",
    "UsersCollectionName": "BestSellerUsersCollection",
    "UserBestSellerFavoritesCollectionName": "UserBestSellerFavoritesCollection"
  },
  "IdentityServerSettings": {
    "Clients": [
      {
        "ClientId": "insomnia",
        "AllowedScopes": [
          "openid",
          "profile",
          "bestSeller.fullaccess",
          "IdentityServerApi",
          "roles",
          "user_data"
        ],
        "AllowedGrantTypes": ["authorization_code"],
        "RequireClientSecret": false,
        "RedirectUris": ["urn:ietf:wg:oauth:2.0:oob"],
        "AlwaysIncludeUserClaimsInIdToken": true
      },
      {
        "ClientId": "frontend",
        "AllowedScopes": [
          "openid",
          "profile",
          "bestSeller.fullaccess",
          "IdentityServerApi",
          "roles",
          "user_data"
        ],
        "AllowedGrantTypes": ["authorization_code"],
        "RequireClientSecret": false,
        "RedirectUris": [
          "http://localhost:3000/authentication/login-callback",
          "http://localhost:3000/"
        ],
        "AlwaysIncludeUserClaimsInIdToken": true,
        "PostLogoutRedirectUris": ["http://localhost:3000/"]
      }
    ],
    "ApiScopes": [
      {
        "Name": "bestSeller.fullaccess"
      },
      {
        "Name": "IdentityServerApi"
      }
    ],
    "ApiResources": [
      {
        "Name": "BestSeller",
        "Scopes": ["bestSeller.fullaccess"],
        "UserClaims": ["role"]
      }
    ]
  },
  "IdentitySettings": {
    "AdminEmail": "admin@bestseller.com",
    "AdminPassword": "Admin1!"
  },
  "AllowedOrigin": "http://localhost:3000"
}
